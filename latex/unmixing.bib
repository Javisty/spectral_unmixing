	publisher = {Springer International Publishing},
	author = {Janiczek and al.},
	editor = {Vedaldi, Andrea and Bischof, Horst and Brox, Thomas and Frahm, Jan-Michael},
	year = {2020},
	keywords = {Hyperspectral imaging, Differentiable programming, Spectral unmixing},
	pages = {649--666},
	file = {Janiczek et al_2020_Differentiable Programming for Hyperspectral Unmixing Using a Physics-Based.pdf:/home/javisty/Zotero/storage/V9J4LPDF/Janiczek et al_2020_Differentiable Programming for Hyperspectral Unmixing Using a Physics-Based.pdf:application/pdf}
