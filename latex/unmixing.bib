	keywords = {learning (artificial intelligence), optimization, Hyperspectral imaging, abundance estimation step, abundance maps, abundance matrix, Artificial neural networks, deep learning, Deep learning (DL), deep NMF model, Estimation, geophysical image processing, gradient descent method, gradient methods, hidden information, hierarchical features, hyperspectral applications, hyperspectral image, hyperspectral imaging, hyperspectral unmixing, matrix decomposition, multiplicative update rules, NMF-based methods, nonnegative matrix factorization (NMF), nonnegativity constraint, optimisation, Periodic structures, pure spectral signatures, SDNMF-TV algorithm, single layer, Sparse matrices, sparsity constraint, sparsity-constrained deep NMF, sparsity-constrained deep nonnegative matrix factorization, spatial information, spectral information, total reconstruction error, total variation (TV), total variation technique, TV, unmixing methods},
	pages = {6245--6257},
	file = {IEEE Xplore Abstract Record:/home/javisty/Zotero/storage/686IFPN9/8372956.html:text/html;Feng et al. - 2018 - Hyperspectral Unmixing Using Sparsity-Constrained .pdf:/home/javisty/Zotero/storage/L7AKSMXH/Feng et al. - 2018 - Hyperspectral Unmixing Using Sparsity-Constrained .pdf:application/pdf},
}

@Article{borsoi_spectral_2020,
	title = {Spectral {Variability} in {Hyperspectral} {Data} {Unmixing}: {A} {Comprehensive} {Review}},
	shorttitle = {Spectral {Variability} in {Hyperspectral} {Data} {Unmixing}},
	url = {http://arxiv.org/abs/2001.07307},
	abstract = {The spectral signatures of the materials contained in hyperspectral images (HI), also called endmembers (EM), can be signiﬁcantly affected by variations in atmospheric, illumination or environmental conditions typically occurring within an HI. Traditional spectral unmixing (SU) algorithms neglect the spectral variability of the endmembers, what propagates signiﬁcant mismodeling errors throughout the whole unmixing process and compromises the quality of its results. Therefore, large efforts have been recently dedicated to mitigate the effects of spectral variability in SU. This resulted in the development of algorithms that incorporate different strategies to allow the EMs to vary within an HI, using, for instance, sets of spectral signatures known a priori, Bayesian, parametric, or local EM models. Each of these approaches has different characteristics and underlying motivations. This paper presents a comprehensive literature review contextualizing both classic and recent approaches to solve this problem. We give a detailed evaluation of the sources of spectral variability and their effect in HI spectra. Furthermore, we propose a new taxonomy that organizes existing work according to a practitioner’s point of view, based on the necessary amount of supervision and on the computational cost they require. We also review methods used to construct spectral libraries (which are required by many SU techniques) based on the observed HI, as well as algorithms for library augmentation and reduction. Finally, we conclude the paper with some discussions and an outline of possible future directions for the ﬁeld.},
	language = {en},
	urldate = {2020-06-04},
	journal = {arXiv:2001.07307 [eess]},
	author = {Borsoi, Ricardo Augusto and Imbiriba, Tales and Bermudez, José Carlos Moreira and Richard, Cédric and Chanussot, Jocelyn and Drumetz, Lucas and Tourneret, Jean-Yves and Zare, Alina and Jutten, Christian},
	month = jan,
	year = {2020},
	note = {tex.ids: Borsoi2020
arXiv: 2001.07307},
	keywords = {Electrical Engineering and Systems Science - Image and Video Processing, Electrical Engineering and Systems Science - Signal Processing},
	file = {Borsoi et al_2020_Spectral Variability in Hyperspectral Data Unmixing.pdf:/home/javisty/Zotero/storage/MSCJR2C9/Spectral Variability in Hyperspectral Data.pdf:application/pdf},
